{
  "dashboard": {
    "id": null,
    "title": "Kafka Observability Dashboard",
    "timezone": "browser",
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "stat",
        "title": "Producer - Mensagens Produzidas",
        "targets": [
          {
            "expr": "producer_messages_total",
            "refId": "A"
          }
        ],
        "id": 1,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 }
      },
      {
        "type": "stat",
        "title": "Consumer - Mensagens Consumidas",
        "targets": [
          {
            "expr": "consumer_messages_total",
            "refId": "B"
          }
        ],
        "id": 2,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 }
      },
      {
        "type": "graph",
        "title": "Uso de Mem√≥ria JVM",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes",
            "refId": "C"
          }
        ],
        "id": 3,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "gridPos": { "x": 0, "y": 6, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "Uso de CPU do Processo",
        "targets": [
          {
            "expr": "process_cpu_usage",
            "refId": "D"
          }
        ],
        "id": 4,
        "datasource": {
          "type": "prometheus",
          "uid": "prometheus"
        },
        "gridPos": { "x": 12, "y": 6, "w": 12, "h": 8 }
      }
    ]
  },
  "overwrite": true
}

